{
  "name": "Ball Talk",
  "slug": "balltalk",
  "scheme": "balltalk",
  "version": "1.1.0",
  "orientation": "portrait",
  "icon": "./assets/images/icon.png",
  "userInterfaceStyle": "automatic",
  "ios": {
    "googleServicesFile": "./GoogleService-Info.plist",
    "supportsTablet": true,
    "bundleIdentifier": "com.balltalk.app"
  },
  "android": {
    "googleServicesFile": "./app/google-services.json",
    "adaptiveIcon": {
      "foregroundImage": "./assets/images/adaptive-icon.png",
      "backgroundColor": "#ffffff"
    },
    "package": "com.balltalk.app"
  },
  "web": {
    "bundler": "metro",
    "output": "static",
    "favicon": "./assets/images/favicon.png",
    "metro": {
      "unstable_enableSymlinks": false,
      "unstable_enablePackageExports": false
    }
  },
  "plugins": [
    "expo-router",
    "expo-splash-screen",
    "@react-native-firebase/app",
    [
      "expo-build-properties",
      {
        "ios": {
          "useFrameworks": "static"
        }
      }
    ],
    [
      "expo-auth-session"
    ]
  ],
  "extra": {
    "eas": {
      "projectId": "balltalk-app"
    },
    "chatFeaturesEnabled": true,
    "premiumGroupsEnabled": true,
    "lastUpdated": "2025-03-09T01:25:16.340Z"
  },
  "expo": {
    "plugins": [
      "expo-router"
    ],
    "android": {
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS",
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE"
      ]
    }
  }
}