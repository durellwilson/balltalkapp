{
  "name": "balltalkapp",
  "main": "expo-router/entry",
  "version": "1.0.0",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web --port 9003",
    "clear-cache": "expo start --clear",
    "web-clear": "expo start --web --port 9003 --clear",
    "web-fix": "node ./scripts/fix-web.js",
    "diagnose-router": "node ./scripts/diagnose-expo-router.js",
    "emergency-fix": "node ./scripts/emergency-fix.js",
    "start:tunnel": "expo start --tunnel",
    "start:clear:tunnel": "expo start --clear --tunnel",
    "start:emulators": "node ./scripts/start-with-emulators.js",
    
    "build:web": "npx expo export",
    "build:android": "eas build --platform android",
    "build:ios": "eas build --platform ios",
    
    "deploy": "npm run build:web && firebase deploy --only hosting",
    "deploy:rules": "firebase deploy --only firestore:rules,storage:rules --config firebase/config/firebase.json",
    "deploy:indexes": "node ./scripts/deploy-indexes.js",
    "deploy:expo:preview": "eas update --auto --branch preview --config config/eas.json",
    "deploy:expo:production": "eas update --auto --branch production --config config/eas.json",
    "deploy:test": "npm run build:web && firebase hosting:channel:deploy test --expires 1d --config firebase/config/firebase.json",
    
    "lint": "expo lint",
    "test": "jest --config config/jest.config.js",
    "test:unit": "jest --config config/jest.config.js",
    "test:ci": "jest --config config/jest.config.js --ci --coverage",
    "test:chat": "jest --config config/jest.config.js --testPathPattern=\"__tests__/chat\"",
    "test:audio": "jest --config config/jest.config.js --testPathPattern=\"services/audio|models/audio\"",
    "test:error-handling": "jest --config config/jest.config.js --testPathPattern=\"__tests__/error-handling\"",
    
    "emulators:setup": "node ./scripts/setup-emulators.js",
    "emulators:seed": "node ./scripts/seed-emulators.js",
    "emulators:start": "firebase emulators:start --import=./firebase/emulator/data --export-on-exit --config firebase/config/firebase.json",
    
    "cleanup:docs": "node ./scripts/cleanup-docs.js",
    "setup": "node ./scripts/setup-and-run.js",
    "reset-project": "node ./scripts/reset-project.js",
    
    "verify:chat": "node ./scripts/verify-chat.js",
    "verify:audio": "ts-node scripts/verify-audio-processing.ts",
    "verify:error-handling": "node ./scripts/verify-error-handling.js"
  },
  "dependencies": {
    "@expo/ngrok": "^4.1.3",
    "@expo/vector-icons": "^14.0.4",
    "@firebase/app": "^0.11.2",
    "@firebase/auth": "^1.9.1",
    "@firebase/firestore": "^4.7.9",
    "@firebase/storage": "^0.13.7",
    "@react-native-async-storage/async-storage": "1.23.1",
    "@react-native-community/datetimepicker": "8.2.0",
    "@react-native-community/netinfo": "^11.4.1",
    "@react-native-community/slider": "4.5.5",
    "@react-native-firebase/app": "^21.12.0",
    "@react-native-firebase/auth": "^21.12.0",
    "@react-native-firebase/firestore": "^21.12.0",
    "@react-native-firebase/storage": "^21.12.0",
    "@react-native-google-signin/google-signin": "^13.2.0",
    "@react-native-picker/picker": "^2.9.0",
    "@react-navigation/bottom-tabs": "^7.2.0",
    "@react-navigation/native": "^7.0.14",
    "@supabase/supabase-js": "^2.48.0",
    "axios": "^1.8.2",
    "date-fns": "^4.1.0",
    "expo": "^52.0.37",
    "expo-apple-authentication": "^7.1.3",
    "expo-auth-session": "~6.0.3",
    "expo-av": "^15.0.2",
    "expo-blur": "^14.0.3",
    "expo-build-properties": "^0.13.2",
    "expo-clipboard": "^7.0.1",
    "expo-constants": "^17.0.7",
    "expo-crypto": "~14.0.2",
    "expo-document-picker": "^13.0.3",
    "expo-file-system": "^18.0.11",
    "expo-font": "^13.0.4",
    "expo-haptics": "^14.0.1",
    "expo-image-picker": "^16.0.6",
    "expo-linking": "^7.0.5",
    "expo-router": "^4.0.17",
    "expo-splash-screen": "^0.29.22",
    "expo-status-bar": "^2.0.1",
    "expo-symbols": "^0.2.2",
    "expo-system-ui": "^4.0.8",
    "expo-web-browser": "^14.0.2",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-native": "0.76.7",
    "react-native-gesture-handler": "~2.20.2",
    "react-native-reanimated": "~3.16.1",
    "react-native-safe-area-context": "4.12.0",
    "react-native-screens": "~4.4.0",
    "react-native-web": "~0.19.13",
    "react-native-webview": "13.12.5",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@eslint/js": "^9.21.0",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^12.9.0",
    "@types/axios": "^0.9.36",
    "@types/jest": "^29.5.14",
    "@types/react": "~18.3.12",
    "@types/react-test-renderer": "^18.3.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.26.0",
    "@typescript-eslint/parser": "^8.26.0",
    "audiobuffer-to-wav": "^1.0.0",
    "dotenv": "^16.4.7",
    "eslint": "^8.57.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "firebase": "^11.4.0",
    "firebase-admin": "^13.2.0",
    "jest": "^29.7.0",
    "jest-expo": "^52.0.5",
    "js-yaml": "^4.1.0",
    "open": "^10.1.0",
    "react-test-renderer": "18.3.1",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.26.0",
    "eslint-config-expo": "~8.0.1"
  },
  "private": true
}
