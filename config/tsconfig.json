{
  "compilerOptions": {
    "strict": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "esnext",
    "jsx": "react-native",
    "lib": [
      "dom",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "../",
    "paths": {
      "../../components/*": ["components/*"],
      "@constants/*": ["constants/*"],
      "../../hooks/*": ["hooks/*"],
      "../../contexts/*": ["contexts/*"],
      "../../services/*": ["services/*"],
      "../../utils/*": ["utils/*"],
      "@assets/*": ["assets/*"],
      "../../models/*": ["models/*"]
    }
  },
  "include": [
    "../**/*.ts",
    "../**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ],
  "extends": "expo/tsconfig.base"
}
